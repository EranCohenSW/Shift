{
  "manifest_version": 2,
  "name": "Swap Input",
  "version": "0.1.0",
  "description": "This will enable you to swap the input you were typed instantly from english to hebrew and vice versa",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "jquery-3.3.1.min.js", "mapping.js", "cscript.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["jquery-3.3.1.min.js","mapping.js"],
    "persistent": false
  },

  "permissions": [
    "storage",
    "notifications",
    "contextMenus"
  ]
}